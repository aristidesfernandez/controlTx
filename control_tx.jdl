entity Brand {
  id Long 
  name String 
}

entity Operator {
  id Long 
  name String 
  nit String 
}

enum ContractType {
  SALE,
  RENT,
  LOAN
}

entity Contract {
  id Long 
  reference String 
  type ContractType required
  amountInterfaceBoard Long required  
  startTime	ZonedDateTime required
  finishTime ZonedDateTime 
}

entity PurchaseOrder {
  id Long
  orderAmount Long required
  createAt ZonedDateTime required
  iesOrderNumber  Long required
}

entity ReceptionOrder {
  id Long
  providerLotNumber Long required
  amountReceived Long required
  remission String maxlength(30) required
  entryDate ZonedDateTime required
  warrantyDate ZonedDateTime required  
}

entity InterfaceBoard {
  id Long 
  ipAddress String 
  hash String 
  mac String required
}

enum Location {
  IES,
  CLIENT
}

enum StatusInterfaceBoard {
  OPERATION,
  STOCK,
  IN_TRANSFER,
  REPAIR, 
  WARRANTY,
  DISCHARGED
}

entity ControlInterfaceBoard { 
  id Long
  location Location required
  state StatusInterfaceBoard required
  startTime	ZonedDateTime required
  finishTime ZonedDateTime 
}

relationship ManyToOne {
  Operator{ brand(name) required} to Brand   
  ControlInterfaceBoard{ contract(reference) } to Contract  
  ControlInterfaceBoard{ interfaceBoard(mac) required } to InterfaceBoard 
  InterfaceBoard{ receptionOrder(providerLotNumber) required } to ReceptionOrder 
  Contract{ operator(name) required } to Operator 
  ReceptionOrder{ purchaseOrder(iesOrderNumber) required } to PurchaseOrder 
}

service all with serviceImpl
dto all with mapstruct
paginate all with pagination
filter all




